<?xml version="1.0"?>
<odoo>
    <record id="view_tree_extenss_dn_exp_notice" model="ir.ui.view">
        <field name="name">extenss.dn.exp.notice.tree</field>
        <field name="model">extenss.credit</field>
        <field name="arch" type="xml">
            <tree>
                <field name="credit_id"/>
                <field name="customer_id"/>
                <field name="request_id"/>
                <field name="product_id"/>
                <field name="salesperson_id"/>
                <field name="office_id"/>
                <field name="anchor_id"/>
                <field name="bill_id"/>
                <field name="customer_type"/>
                <field name="amount_financed"/>
                <field name="type_credit"/>
                <field name="frequency"/>
                <field name="interest_rate"/>
                <field name="term"/>
            </tree>
        </field>
    </record>

    <record id="view_form_extenss_dn_exp_notice" model="ir.ui.view">
        <field name="name">extenss.dn.exp.notice.form</field>
        <field name="model">extenss.credit</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_apply_payment" string="Apply Payment" type="object" class="oe_highlight"/>
                </header>
                <sheet>
                    <group>
                        <div class="oe_title">
                            <div class="oe_edit_only">
                                <label for="credit_id"/>
                            </div>
                            <h1><field name="credit_id"/></h1>
                        </div>
                    </group>
                    <group name="group_top">
                        <group name="group_left">
                            <field name="customer_id" readonly="1" options="{'no_open': True}"/>
                            <field name="customer_type" readonly="1"/>
                            <field name="request_id" readonly="1" options="{'no_open': True}"/>
                            <field name="bill_id" readonly="1"/>
                            <field name="reference_number" readonly="1"/>
                            <field name="credit_status" readonly="1"/>
                            <field name="account_status_date" readonly="1"/>
                            <field name="product_id" readonly="1" options="{'no_open': True}"/>
                            <field name="type_credit" readonly="1" options="{'no_open': True}"/>
                            <field name="cs" invisible="1"/>
                            <field name="af" invisible="1"/>
                            <field name="ap" invisible="1"/>
                            <field name="notice_date"/>
                            <field name="payment_date"/>
                            <field name="conciliation_credit_ids" options="{'no_create': True}" domain="[('status', '=', 'pending'),('type_rec', '=', 'dn')]"><!--domain="[('status', '=', 'pending'),('type_rec', '=', 'dn')]"-->
                                <tree editable="bottom">
                                    <field name="check" />
                                    <field name="reference" readonly="1"/>
                                    <field name="customer" options="{'no_open': True}" readonly="1"/>
                                    <field name="date" readonly="1"/>
                                    <field name="amount" readonly="1"/>
                                    <field name="status" readonly="1"/>
                                    <field name="type_rec" invisible="1"/>
                                </tree>
                                <form>
                                    <sheet>
                                        <group>
                                            <field name="check"/>
                                            <field name="reference"/>
                                            <field name="customer"/>
                                            <field name="date"/>
                                            <field name="amount"/>
                                            <field name="status"/>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </group>
                    </group>
                    <notebook>
                        <page string="Expiry notices" name="expiry_notices">
                            <field name="credit_expiry_ids">
                                <tree>
                                    <field name="expiry_number"/>
                                    <field name="payment_number"/>
                                    <field name="due_not_date"/>
                                    <field name="total_paid_moras"/>
                                    <field name="amount_not"/>
                                    <field name="total_paid_not"/>
                                    <field name="total_to_pay"/>
                                </tree>
                                <form>
                                    <sheet>
                                        <group>
                                            <group>
                                                <field name="expiry_number"/>
                                                <field name="payment_number"/>
                                                <field name="due_not_date"/>
                                                <field name="payment_date"/>
                                            </group>
                                            <group>
                                                <field name="total_paid_moras"/>
                                                <field name="amount_not"/>
                                                <field name="total_paid_not"/>
                                                <field name="total_to_pay"/>
                                            </group>
                                        </group>
                                        <group>
                                            <notebook>
                                                <page name="concepts_expiration" string="Concepts Expiration Notices">
                                                    <field name="expiry_notice_ids">
                                                        <tree>
                                                            <field name="concept"/>
                                                            <field name="amount_concept"/>
                                                            <field name="total_paid_concept"/>
                                                            <field name="full_paid"/>
                                                        </tree>
                                                        <form>
                                                            <group>
                                                                <group>
                                                                    <field name="concept" />
                                                                    <field name="amount_concept"/>
                                                                </group>
                                                                <group>
                                                                    <field name="total_paid_concept"/>
                                                                    <field name="full_paid"/>
                                                                </group>
                                                            </group>
                                                            <group>
                                                                <field name="concept_pay_ids" string="Payments" options="{'no_create_edit': False},
                                                                {'no_quick_create': False},
                                                                {'no_open': False}">
                                                                    <tree open="false">
                                                                        <field name="expiry_number_en"/>
                                                                        <field name="date_paid"/>
                                                                        <field name="total_paid_cp"/>
                                                                    </tree>
                                                                    <form>
                                                                        <group>
                                                                            <group>
                                                                                <field name="expiry_number_en"/>
                                                                                <field name="date_paid"/>
                                                                            </group>
                                                                            <group>
                                                                                <field name="total_paid_cp"/>
                                                                            </group>
                                                                        </group>
                                                                    </form>
                                                                </field>
                                                            </group>
                                                        </form>
                                                    </field>
                                                </page>
                                            </notebook>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_tree_extenss_dn_exp_notice_search" model="ir.ui.view">
        <field name="name">extenss.dn.exp.notice.search</field>
        <field name="model">extenss.credit</field>
        <field name="arch" type="xml">
            <search>
                <field name="credit_id"/>
                <field name="customer_id"/>
                <field name="request_id"/>
                <field name="product_id"/>
                <field name="salesperson_id"/>
                <field name="office_id"/>
                <field name="anchor_id"/>
                <field name="bill_id"/>
                <field name="customer_type"/>
                <field name="amount_financed"/>
                <field name="type_credit"/>
                <field name="frequency"/>
                <field name="interest_rate"/>
                <field name="term"/>
                <!--<filter invisible="1" string="Today Activities" name="activities_today"
                            domain="[('activity_ids.date_deadline', '=', context_today().strftime('%Y-%m-%d'))]"/>-->
                <!-- <filter string="1 Days" name="days_15"  domain="[('create_date', '>', context_today().strftime('%Y-%m-%d'))]"/> -->
                <!--<filter string="2 Days" name="days_30"  domain="[('create_date', '>', 'account_status_date')]"/>
                <filter string="3 Days" name="days_90"  domain="[('create_date', '>', 'account_status_date')]"/> -->
            </search>
        </field>
    </record>

    <record id="action_exp_notice_dn" model="ir.actions.act_window">
        <field name="name">Expiry Notice</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">extenss.credit</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_tree_extenss_dn_exp_notice_search"/>
        <field name="domain">[('dn', '=', True)]</field>
        <field name="view_ids"
            eval="[(5,0,0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('extenss_dn.view_tree_extenss_dn_exp_notice')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('extenss_dn.view_form_extenss_dn_exp_notice')})]"/>
    </record>

    <menuitem 
        id="submenu_exp_notice_dn"
        name="Expiry notice"
        sequence="40"
        parent="menu_dn"
        action="action_exp_notice_dn"/>
</odoo>