    <record id="extenss_credit_dn_view_dashboard" model="ir.ui.view">
        <field name="name">extenss.credit.dn.view.dashboard</field>
        <field name="model">extenss.credit</field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <dashboard>
                <view type="graph" ref="extenss_dn.extenss_credit_dn_view_graph"/>
                <group>
                    <group>
                        <aggregate name="credits" string="Credits" group_operator="count" field="id" measure="__count__"/>
                        <aggregate name="amount_financed_aggregate" field="amount_financed" string="Amount financed" widget="monetary"/>
                        <aggregate name="contacts" string="Contacts" group_operator="count" field="customer_id" measure="__count__"/>
                        <aggregate name="count_moras" string="Count Moras" group_operator="count" field="count_moras" measure="__count__"/>
                        <aggregate name="total_moras" string="Total Moras" field="total_moras" widget="monetary"/>
                        <aggregate name="total_paid" string="Total Paid" field="total_paid" widget="monetary"/>
                        <aggregate name="past_due_interest" string="" field="past_due_interest" widget="monetary"/>
                        <!--<aggregate name="prorated_revenue_aggregate" field="expected_revenue" invisible="1"/>
                        <formula name="prorated_revenue" string="Prorated Revenue" value="record.prorated_revenue_aggregate" widget="monetary"/>
                        <formula name="deal_size" string="Average Deal Size" value="record.expected_revenue_aggregate / record.opportunities" widget="monetary"/>
                        <aggregate name="days_to_assign" string="Days to Assign" field="day_open" group_operator="avg" value_label="days"/>
                        <aggregate name="days_to_close" string="Days to Close" field="day_close" group_operator="avg" value_label="days"/>
                        <aggregate name="days_exceeding_closing" string="Exceeding Close Days" field="days_exceeding_closing" group_operator="avg"/> -->
                    </group>
