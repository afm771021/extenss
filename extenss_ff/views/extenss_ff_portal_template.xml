              <div class="row">
                <div class="col-md-12">
                  <div class="col-md-4" style="float: right;">
                      <label></label>
                      <!-- <span t-field="extenss_ff."/> -->
                  </div>
                  <div class="row">
                      <div class="col-md-3 text-right">
                          <label>Commission vat:</label>
                      </div>
                      <div class="col-md-4">
                          <span t-field="extenss_ff.commission_vat"/>
                      </div>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12">
                  <div class="col-md-4" style="float: right;">
                      <label></label>
                      <!-- <span t-field="extenss_ff."/> -->
                  </div>
                  <div class="row">
                      <div class="col-md-3 text-right">
                          <label>Total commission:</label>
                      </div>
                      <div class="col-md-4">
                          <span t-field="extenss_ff.total_commission"/>
                      </div>
                  </div>
                </div>
              </div>

              <div class="row">
                <h3 class="o_page_header">Dispositions</h3>
                <t t-call="portal.portal_table">
                    <thead>
                      <tr class="active">
                        <th>Nombre</th>
                        <th>Amount</th>
                        <th>Init Date</th>
                        <th>Invoice Date</th>
                        <th>Amount Financed</th>
                        <th>Status</th>
                      </tr>
                    </thead>
                    <tbody>
                      <t t-foreach="extenss_ff.lineff_ids" t-as="ext_ff">
                        <tr>
                          <td><span t-field="ext_ff.name"/></td>
                          <td><span t-field="ext_ff.amount_ff"/></td>
                          <td><span t-field="ext_ff.init_date"/></td>
                          <td><span t-field="ext_ff.invoice_date"/></td>
                          <td><span t-field="ext_ff.amount_financed"/></td>
                          <td><span t-field="ext_ff.credit_status"/></td>
                        </tr>
                      </t>
                    </tbody>
                  </t>
              </div>
            </div>
        </xpath>
      </template>
</odoo>
