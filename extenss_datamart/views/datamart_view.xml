    <record id="view_form_extenss_datamart_conciliation" model="ir.ui.view">
        <field name="name">extenss.datamart.conciliation.form</field>
        <field name="model">extenss.datamart.conciliation</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="initial_balance"/>
                        <field name="final_balance"/>
                    </group>
                    <group>
                        <field name="status_bank"/>
                        <field name="processing_id"/>
                        <field name="type"/>
                    </group>
                    <notebook>
                        <page name="concilation" string="Transactions">
                            <field name="conciliation_ids">
                                <tree editable="bottom">
                                    <field name="check"/>
                                    <field name="date"/>
                                    <field name="description"/>
                                    <field name="customer"/>
                                    <field name="reference"/>
                                    <field name="amount"/>
                                    <field name="status"/>
                                    <field name="display_type"/>
                                    <field name="type_rec"/>
                                    <field name="bill_id"/>
                                    <field name="expiry_id"/>
                                </tree>
                                <form>
                                    <group>
                                        <group>
                                            <field name="date"/>
                                            <field name="description"/>
                                            <field name="customer"/>
                                            <field name="reference"/>
                                            <field name="amount"/>
                                        </group>
                                        <group>
                                            <field name="check"/>
                                            <field name="status"/>
                                            <field name="display_type"/>
                                            <field name="type_rec"/>
                                            <field name="bill_id"/>
                                            <field name="expiry_id"/>
                                        </group>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

