<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="menu_simple_credit_form" model="website.menu">
        <field name="name">Simple Credit</field>
        <field name="url">/cs</field>
        <field name="parent_id" ref="website.main_menu"/>
        <field name="sequence">100</field>
    </record>

    <template id="cs_template_page" name="Simple Credit">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="oe_structure">
                    <div class="container">
                        <form role="form" action="/cs_send" data-model_name="crm.lead" method="post">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                            <div class="form-group">
                                <label for="partner_id" class="control-label">Customer</label>
                                <input type="text" name="partner_id" t-att-value="partner_id" id="partner_id" 
                                    class="form-control" required="1"/>
                            </div>
                            <div class="form-group">
                                <label for="email_from" class="control-label">Email</label>
                                <input type="email" name="email_from" t-att-value="email_from" id="email_from" 
                                    class="form-control" required="1"/>
                            </div>
                            <div class="form-group"> 
                                <label for="planned_revenue" class="control-label">Amount</label>
                                <input type="text" name="planned_revenue" t-att-value="planned_revenue" id="planned_revenue" 
                                    class="form-control" required="1"/>
                            </div>
                            <div class="form-group">
                                <label for="term_cred" class="control-label">Term</label>
                                <input type="text" name="term_cred" t-att-value="term_cred" id="term_cred"
                                    class="form-control" required="1"/>
                            </div>
                            <div class="form-group">
                                <label for="frequency_cred" class="control-label">Frecuency</label>
                                <input type="text" name="frequency_cred" t-att-value="frequency_cred" id="frequency_cred"
                                    class="form-control" required="1"/>
                            </div>
                            <div class="clearfix oe_login_buttons">
                                <button type="submit" class="btn btn-primary pull-left">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <record id="cs_send_ok" model="website.page">
        <field name="name">Thanks</field>
        <field name="type">qweb</field>
        <field name="url">/cs-ok</field>
        <field name="website_published">True</field>
        <field name="key">extenss_cs.cs_send_ok</field>
        <field name="arch" type="xml">
            <t name="Thanks" t-name="extenss_cs.cs_send_ok">
                <t t-call="website.layout">
                    <div id="wrap">
                        <div class="container">
                            <h1>Thanks</h1>
                            <div class="row">
                                <div class="col-lg-8">
                                    <div class="alert alert-success" role="status">
                                        Your message has been sent successfully.
                                    </div>
                                    <p>
                                        We will get back to you shortly.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </field>
    </record>
</odoo>
